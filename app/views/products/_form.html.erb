

<%= form_with model: @product do |f| %>

  <div>
    <%= f.label :product_name %>
    <br>
    <%= f.text_field :name %>
  </div>
  <br>
  <div>
    <%= f.label :cost %>
    <br>
    <%= f.text_field :cost %>
  </div>
  <br>
  <div>
    <%= f.label :inventory %>
    <br>
    <%= f.number_field :inventory %>
  </div>
  <br>
  <div>
    <%= f.label :categories %>
    <br>
    <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %> <br>
  </div>
  <br>
  <div>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :image_embed_link %>
    <br>
    <%= f.text_area :image %>
  </div>
  <br>
  <div>
    <%= f.submit action_name %>
  </div>
<% end %>
