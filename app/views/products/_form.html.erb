
<div class="list-group product-group">
  <div class="list-group-item" >
    <%= form_with model: @product do |f| %>
      <div class="form-group">
        <%= f.label :name, "Product Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :cost %>
        <%= f.text_field :cost, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :inventory %>
        <%= f.number_field :inventory, class: "form-control" %>
      </div>
      <div class="form-group category-label">
        <%= f.label :categories %>
        <div class="category-buttons">
        <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :image_embed_link %>
        <%= f.text_area :image, class: "form-control" %>
      </div>
      <%= f.submit action_name, class: "btn btn-info" %>
    <% end %>
  </div>
</div>