<div class="container" style="margin-top:30px" >
<h1>Purchase Form</h1>
  <div class="list-group order-group">
    <div class="list-group-item">
    <%= form_with model: @cart do |f| %>

      <div class="form-group row">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group row">
        <%= f.label :email_address %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group row">
        <%= f.label :mailing_address %>
        <%= f.text_field :mailing_address, class: "form-control" %>
      </div>

      <div class="form-group row">
        <%= f.label :zipcode %>
        <%= f.text_field :zip, class: "form-control" %>
      </div>

      <div class="form-group row">
        <%= f.label :credit_card_number %>
        <%= f.text_field :cc_number, class: "form-control" %>
        <small class="form-text text-muted">We'll never share your credit card info with anyone else.</small>
      </div>

      <div class="form-group row">
        <%= f.label :credit_card_expiration %>
        <%= f.text_field :cc_expiration, class: "form-control" %>
        <small class="form-text text-muted">We'll never share your credit card info with anyone else.</small>
      </div>

      <div class="form-group row">
        <%= f.label :cvv %>
        <%= f.text_field :cc_cvv, class: "form-control" %>
        <small class="form-text text-muted">We'll never share your credit card info with anyone else.</small>
      </div>

      <div class="form-group">
        <%= f.submit "Purchase order", class: "btn btn-info" %>
      </div>
    <% end %>
    </div>
  </div>
</div>