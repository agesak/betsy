<h2>Purchase Form</h2>
  <section>
    <%= form_with model: @cart do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email_address %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :mailing_address %>
        <%= f.text_field :mailing_address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :zipcode %>
        <%= f.text_field :zip, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :credit_card_number %>
        <%= f.text_field :cc_number, class: "form-control" %>
        <small id="emailHelp" class="form-text text-muted">We'll never share your credit card info with anyone else.</small>
      </div>

      <div class="form-group">
        <%= f.label :credit_card_expiration %>
        <%= f.text_field :cc_expiration, class: "form-control" %>
        <small id="emailHelp" class="form-text text-muted">We'll never share your credit card info with anyone else.</small>
      </div>

      <div class="form-group">
        <%= f.label :cvv %>
        <%= f.text_field :cc_cvv, class: "form-control" %>
        <small id="emailHelp" class="form-text text-muted">We'll never share your credit card info with anyone else.</small>
      </div>

      <div class="form-group">
        <%= f.submit "Purchase order", class: "btn btn-primary" %>
      </div>
    <% end %>
  </section>