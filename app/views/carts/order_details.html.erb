<div class="container" style="margin-top:30px">
  <div class="list-group product-group">
    <div class="list-group-item" >
      <h1 class="confirmation-header">Order #<%= @ordered_cart.id %></h1>
      <section class="order-details">
        <h3>Order Details</h3>
        <div>Order ID: <%= @ordered_cart.id %></div>
        <div>Order Date: <%= @ordered_cart.purchase_datetime.strftime("%b %d, %Y") %></div>
        <div>Order Time: <%= @ordered_cart.purchase_datetime.strftime("%I:%M%p") %></div>
        <div>Total Price: $<%= '%.2f'%@ordered_cart.total_price %></div>
        <div>Current Status: <%= @ordered_cart.status.capitalize %></div>
      </section>


      <hr class="order-break">
      <section>
        <h3>Shipping Address</h3>

        <p> <%= @ordered_cart.name %> </p>
        <p> <%= @ordered_cart.mailing_address %></p>
        <p> <%= @ordered_cart.email %></p>
      </section>

      <hr class="order-break">

      <section>
        <h3>Payment Information</h3>

        <table class="table">
          <tbody>
          <tr>
            <td>Card Number</td>
            <td>************ <%= @ordered_cart.cc_number[-4..-1] %></td>
          </tr>
          </tbody>
        </table>
      </section>


  </div>
</div>
